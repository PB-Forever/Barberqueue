<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Date"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Barber"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_barber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Time"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:columnCount="3"
                android:useDefaultMargins="true">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="09.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="10.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="11.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="12.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="13.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="14.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="15.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="16.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="17.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="18.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="19.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="20.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="21.00"
                    android:button="@android:color/transparent"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/date_reserve_selector"
                    android:minHeight="48dp"
                    android:text="22.00"
                    android:button="@android:color/transparent"/>
            </GridLayout>
            <Button
                android:id="@+id/choose_services_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Services"
                android:background="@drawable/date_reserve_normal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>